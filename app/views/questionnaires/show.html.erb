<h1 class="mx-3 my-3">MovieMojo</h1>
<h3 class= "mx-3 my-3">Choose one of our recomendations!</h3>

  <div class="container">

    <div class="row">

      <div class="col my-5 mx-2 result-movie-wrapper" data-controller="results">
        <div class="result-movie-card secondary" data-results-target="card" data-action="mouseover->results#mouseEnters mouseleave->results#mouseLeaves">
        <div class="overlay" style="background-image:url(https://image.tmdb.org/t/p/w342<%= @generated_movies.second['poster_path']%>); background-size: cover; background-position: center;"></div>
          <h2 class="mx-3 my-3"><%= @generated_movies.second['title']%></h2>
              <div class="text-center d-flex align-items-center justify-content-center">
                <button class="magic-button my-2 d-none text-center" data-results-target="button">
                  <p>Sign up!</p>
                </button>
              </div>
        </div>
      </div>


      <div class="col my-3">
        <div class="result-movie-card d-flex align-items-start flex-column" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="background-image:url(https://image.tmdb.org/t/p/w342<%= @generated_movies.first['poster_path']%>); background-size: cover; background-position: center;">
          <h2 class="mx-3 my-3 py-2"><%= @generated_movies.first['title']%></h2>
          <div class="movie-info text-start mt-auto mx-3">
            <%# <p>Release date: <%#= @generated_movies.first['release_date']%>
          </div>
        </div>
      </div>

<!-- Modal -->

      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <h1>Some text</h1>
              <h2>second line</h2>
              <p>Some text</p>
              <p>some more text</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Watch now!</button>
            </div>
          </div>
        </div>
      </div>

      <div class="col my-5 mx-2 result-movie-wrapper" data-controller="results">
        <div class="result-movie-card secondary" data-results-target="card" data-action="mouseover->results#mouseEnters mouseleave->results#mouseLeaves">
        <div class="overlay" style="background-image:url(https://image.tmdb.org/t/p/w342<%= @generated_movies.third['poster_path']%>); background-size: cover; background-position: center;"></div>
          <h2 class="mx-3 my-3"><%= @generated_movies.third['title']%></h2>
              <div class="text-center d-flex align-items-center justify-content-center">
                <button class="magic-button my-2 d-none text-center" data-results-target="button">
                  <p>Sign up!</p>
                </button>
            </div>
        </div>
      </div>
    </div>

    <div class="row d-flex justify-content-around text-center">
      <p>Do you want more accurate recommendations?</p>
      <button class="magic-button my-2">
        <p>Sign up!</p>
      </button>
    </div>

  </div>

<div class="container">
  <div class="row">
    <h1 class="text-center">Dashboard</h1>
      <div class="col d-flex justify-content-center my-3">
        <div class="card-profile">
          <div class="profile-avatar">
            <%= image_tag current_user.avatar, class: "avatar" %>
          </div>
          <p class="profile-name"> Info
              <span><%= @user.email %>
              </span>
          </p>
        </div>
      </div>
        <div class= "d-flex justify-content-center my-1">
          <%= link_to "Delete your account", user_registration_path, class: "magic-form-button-users-delete btn", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>

  </div>

  <div class="row my-4">
    <h2 class="text-center my-3">My Watchlist</h2>
    <% @user.watched_movies.each do |movie| %>
      <div class="col my-3 mx-2">
        <div id="watchlist-card-id" class="watchlist-card">
          <img class="poster" src=<%= movie.movie.poster_path%>>
          <div class="watchlist-card-content">
            <p class="watchlist-card-title"><%= movie.movie.title %></p>
            <p class="watchlist-card-description">
              <%= movie.movie.overview %><br>
            </p>
            <p>My rating: </p>
                    <div class="rating my-2">
                      <input value="5" name="rating" id="star5" type="radio">
                      <label for="star5"></label>
                      <input value="4" name="rating" id="star4" type="radio">
                      <label for="star4"></label>
                      <input value="3" name="rating" id="star3" type="radio">
                      <label for="star3"></label>
                      <input value="2" name="rating" id="star2" type="radio">
                      <label for="star2"></label>
                      <input value="1" name="rating" id="star1" type="radio">
                      <label for="star1"></label>
                    </div>
                    <% end %>

             <%# <div class="my-2" data-star-rating-target="rater" data-action= "click->star-rating#submit"> %>
            <%#= simple_form_for [@user, @movie] do |f| %>
              <%#= f.input :rating_user, collection: (1..5).to_a, label: "Rate your experience" %>
              <%#= f.submit "Send your review" %>
            <%# end %>
        <%# </div> %>
          </div>
        </div>
    </div>
</div>
</div>
